ngx_addon_name=ngx_http_rest_metacall_module
ngx_feature="MetaCall HTTP (REST API) Wrapper"
ngx_feature_name=
ngx_feature_run=no
ngx_feature_incs="#include <reflect/value.h> \
			#include <metacall/metacall.h>"
ngx_feature_libs="-lreflect -lmetacall"
ngx_feature_test="metacall_print_info();"

CORE_LIBS="$CORE_LIBS $ngx_feature_libs"

HTTP_MODULES="$HTTP_MODULES $ngx_addon_name"

NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_http_rest_metacall_uri.c \
				$ngx_addon_dir/ngx_http_rest_metacall_module.c"


NGX_ADDON_DEPS="$NGX_ADDON_DEPS $ngx_addon_dir/ngx_http_rest_metacall_uri.h \
				$ngx_addon_dir/ngx_http_rest_metacall_module.h"
